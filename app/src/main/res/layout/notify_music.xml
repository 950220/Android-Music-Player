<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:id="@+id/ll_root"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="120dp"
        android:src="@mipmap/logo"
        android:layout_gravity="center"
        android:layout_height="120dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:paddingRight="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/name"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:textColor="#205ba5"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:src="@mipmap/close"
                android:id="@+id/notify_close"
                android:layout_height="40dp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="25dp"
                android:id="@+id/notify_pre"
                android:src="@mipmap/notifylast"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="18dp"
                android:id="@+id/notify_play"
                android:src="@mipmap/notify_play"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="25dp"
                android:id="@+id/notify_next"
                android:src="@mipmap/notifynext"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>