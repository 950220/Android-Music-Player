<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.lws.sy.mv.view.CircleImageView
                android:id="@+id/post_detail_comment_avatar"
                android:layout_width="50dp"
                android:src="@mipmap/icon"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:id="@+id/post_detail_comment_nickname"
                        android:layout_height="25dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:text="楼主"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="8dp"
                        android:id="@+id/post_detail_comment_sign"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:background="#1296db"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="第1楼"
                        android:id="@+id/post_detail_comment_tower"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/post_detail_comment_time"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical"
                        android:layout_height="25dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textColor="#333333"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:id="@+id/post_detail_comment_content"
            android:layout_height="35dp"/>
    </LinearLayout>
</LinearLayout>