<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/ll_main"
    tools:context="com.lws.sy.mv.activity.CenterPostActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/post_close"
            android:padding="8dp"
            android:id="@+id/iv_post_close"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="发布到我的主页"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:text="发布"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/send_post"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>
    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:id="@+id/post_title"
        android:layout_marginTop="10dp"
        android:hint="加个标题哟~"
        android:layout_marginLeft="5dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/et_textarea"/>

    <EditText
        android:layout_width="match_parent"
        android:enabled="true"
        android:gravity="top"
        android:minLines="5"
        android:id="@+id/post_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:hint="来吧，尽情发挥吧..."
        android:layout_marginRight="10dp"
        android:maxLines="7"
        android:scrollbars="vertical"
        android:background="@drawable/et_textarea"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_post_clear"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="清空选择"
        android:textColor="#205ba5"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_photo"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/ll_post_photo"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
        </LinearLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_post_photo"
            android:textColor="#333333"
            android:textSize="18sp"
            android:text="选择图片"
            android:gravity="center"
            android:drawableTop="@mipmap/post_photo"
            android:layout_marginRight="10dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_video"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_post_video"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
        <TextView
            android:layout_width="120dp"
            android:drawableTop="@mipmap/post_video"
            android:id="@+id/iv_post_video"
            android:text="选择视频文件"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_music"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_post_music"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
        <TextView
            android:layout_width="120dp"
            android:drawableTop="@mipmap/post_video"
            android:id="@+id/iv_post_music"
            android:text="选择音乐文件"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_height="100dp"/>
    </LinearLayout>
</LinearLayout>
