<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:id="@+id/dl_left"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/more"
                android:padding="10dp"
                android:id="@+id/iv_open"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:text="音乐中心"
                android:textColor="#333333"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_weight="6"
                android:textSize="18sp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/out"
                android:padding="10dp"
                android:id="@+id/out"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <com.lws.sy.mv.view.MyViewPager
            android:id="@+id/vp_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.lws.sy.mv.view.MyViewPager>
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/music"
            android:paddingTop="10dp"
            android:layout_height="50dp">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="音乐"
                android:gravity="center"
                android:button="@null"
                android:textColor="@drawable/rb_color"
                android:drawableTop="@drawable/rb_1_selector"
                android:id="@+id/music_home"
                android:layout_height="match_parent"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="视频"
                android:button="@null"
                android:drawableTop="@drawable/rb_2_selector"
                android:id="@+id/video_home"
                android:gravity="center"
                android:textColor="@drawable/rb_color"
                android:layout_height="match_parent"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="空间"
                android:id="@+id/user_center"
                android:gravity="center"
                android:button="@null"
                android:textColor="@drawable/rb_color"
                android:drawableTop="@drawable/rb_3_selector"
                android:layout_height="match_parent"/>
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:clickable="true"
        android:background="#f2f5f2"
        >

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
